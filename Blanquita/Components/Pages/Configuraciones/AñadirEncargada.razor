@page "/añadir-encargada"
@using System.ComponentModel.DataAnnotations
@inject IEncargadaService encargadaService
@inject ILogger<AñadirEncargada> Logger

<MudText Typo="Typo.h3" Align="Align.Center">Añadir encargada</MudText>
<EditForm Model="encargada" OnValidSubmit="GuardarEncargada">
    <DataAnnotationsValidator />
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="7">
            <MudCard>
                <MudCardContent>
                    <MudTextField @bind-Value="encargada.Nombre" Label="Nombre de encargada" Variant="Variant.Text"></MudTextField>
                    <MudSelect T="int" Label="Seleccione sucursal" @bind-Value="encargada.Sucursal">
                        @foreach (var _sucursal in sucursales)
                        {
                            <MudSelectItem T="int" Value="@_sucursal.Id">@_sucursal.Nombre</MudSelectItem>
                        }
                    </MudSelect>
                </MudCardContent>
                <MudCardActions>
                    @if (isEditing)
                    {
                        <MudButton Variant="Variant.Text" Color="Color.Error" OnClick="CancelEdit">Cancelar</MudButton>
                    }
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="ml-auto">
                        @(isEditing ? "Actualizar" : "Guardar")
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>
<MudTable ServerData="ServerReload" Dense="true" Hover="true" @ref="encargadas">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Encargadas</MudText>
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="Buscar" Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortLabel="Id" T="Encargadas">Id</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="Nombre" T="Encargadas">Nombre</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortLabel="Sucursal" T="Encargadas">Sucursal</MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Nombre">@context.Nombre</MudTd>
        <MudTd DataLabel="Sucursal">@context.Sucursal</MudTd>
        <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                           Color="Color.Primary"
                           Class="pa-0 ma-0 min-width-auto"
                           OnClick="@(() => EditEncargada(context))" />
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No matching records found</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>Loading...</MudText>
    </LoadingContent>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>

@code {
    private Encargadas encargada = new()
        {
            Sucursal = 0
        };
    private bool isEditing = false;
    private string mensajeConfirmacion;
    private List<(int Id, string Nombre)> sucursales = new()
    {
        (6, "Himno Nacional"),
        (7, "Pozos"),
        (8, "Soledad"),
        (9, "Saucito"),
        (10, "Chapultepec")
    };
    private string searchString = null;
    private MudTable<Encargadas> encargadas;
    private IEnumerable<Encargadas> pagedData;
    private int totalItems;

    private async Task<TableData<Encargadas>> ServerReload(TableState state, CancellationToken token)
    {
        return await encargadaService.ObtenerEncargadasPaginadasAsync(state, searchString);
    }

    private void EditEncargada(Encargadas selectedEncargada)
    {
        encargada = new Encargadas
            {
                Id = selectedEncargada.Id,
                Nombre = selectedEncargada.Nombre,
                Sucursal = selectedEncargada.Sucursal
            };
        isEditing = true;
        StateHasChanged();
    }

    private void CancelEdit()
    {
        encargada = new Encargadas { Sucursal = 0 };
        isEditing = false;
        StateHasChanged();
    }

    private void OnSearch(string text)
    {
        searchString = text;
        encargadas.ReloadServerData();
    }

    private async Task GuardarEncargada()
    {
        try
        {
            if (isEditing)
            {
                await encargadaService.ActualizarEncargadaAsync(encargada);
                mensajeConfirmacion = "Encargada actualizada exitosamente";
            }
            else
            {
                await encargadaService.CrearEncargadaAsync(encargada);
                mensajeConfirmacion = "Encargada registrada exitosamente";
            }

            encargadas.ReloadServerData();
            encargada = new Encargadas { Sucursal = 0 };
            isEditing = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al guardar la encargada");
        }
    }
}
