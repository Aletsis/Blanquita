@code {
    private bool ejecutando1, ejecutando2, ejecutando3, ejecutando4, ejecutando5, ejecutando6, ejecutando7, ejecutandoTodos;
    private DiagnosticoResultado? resultado1, resultado2, resultado3, resultado4, resultado5, resultado6, resultado7;
    private ConfiguracionDto config = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            config = await ConfigService.ObtenerConfiguracionAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al cargar configuración: {ex.Message}", Severity.Error);
        }
    }

    private async Task EjecutarDiagnostico(int archivo)
    {
        try
        {
            string ruta = "";
            List<string> columnasEsperadas = new();

            switch (archivo)
            {
                case 1:
                    ruta = config.Pos10041Path;
                    columnasEsperadas = ConfiguracionHelper.ObtenerColumnasEsperadas(TipoArchivoDbf.Pos10041);
                    break;
                case 2:
                    ruta = config.Pos10042Path;
                    columnasEsperadas = ConfiguracionHelper.ObtenerColumnasEsperadas(TipoArchivoDbf.Pos10042);
                    break;
                case 3:
                    ruta = config.Mgw10008Path;
                    columnasEsperadas = ConfiguracionHelper.ObtenerColumnasEsperadas(TipoArchivoDbf.Mgw10008);
                    break;
                case 4:
                    ruta = config.Mgw10005Path;
                    columnasEsperadas = ConfiguracionHelper.ObtenerColumnasEsperadas(TipoArchivoDbf.Mgw10005);
                    break;
                case 5:
                    ruta = config.Mgw10045Path;
                    columnasEsperadas = ConfiguracionHelper.ObtenerColumnasEsperadas(TipoArchivoDbf.Mgw10045);
                    break;
                case 6:
                    ruta = config.Mgw10002Path;
                    columnasEsperadas = ConfiguracionHelper.ObtenerColumnasEsperadas(TipoArchivoDbf.Mgw10002);
                    break;
                case 7:
                    ruta = config.Mgw10011Path;
                    columnasEsperadas = ConfiguracionHelper.ObtenerColumnasEsperadas(TipoArchivoDbf.Mgw10011);
                    break;
            }

            if (string.IsNullOrEmpty(ruta))
            {
                Snackbar.Add("No hay ruta configurada para este archivo", Severity.Warning);
                return;
            }

            switch (archivo)
            {
                case 1:
                    ejecutando1 = true;
                    resultado1 = null;
                    break;
                case 2:
                    ejecutando2 = true;
                    resultado2 = null;
                    break;
                case 3:
                    ejecutando3 = true;
                    resultado3 = null;
                    break;
                case 4:
                    ejecutando4 = true;
                    resultado4 = null;
                    break;
                case 5:
                    ejecutando5 = true;
                    resultado5 = null;
                    break;
                case 6:
                    ejecutando6 = true;
                    resultado6 = null;
                    break;
                case 7:
                    ejecutando7 = true;
                    resultado7 = null;
                    break;
            }

            StateHasChanged();

            // Pequeña pausa para que la animación de carga se muestre fluidamente
            await Task.Delay(300);

            var query = new DiagnoseFoxProFileQuery(ruta, columnasEsperadas);
            var resultado = await Mediator.Send(query);

            switch (archivo)
            {
                case 1:
                    resultado1 = resultado;
                    break;
                case 2:
                    resultado2 = resultado;
                    break;
                case 3:
                    resultado3 = resultado;
                    break;
                case 4:
                    resultado4 = resultado;
                    break;
                case 5:
                    resultado5 = resultado;
                    break;
                case 6:
                    resultado6 = resultado;
                    break;
                case 7:
                    resultado7 = resultado;
                    break;
            }

            var mensaje = resultado.Exitoso ? "Diagnóstico completado exitosamente" : "Diagnóstico completado con errores";
            var severidad = resultado.Exitoso ? Severity.Success : Severity.Error;
            Snackbar.Add(mensaje, severidad);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al ejecutar diagnóstico: {ex.Message}", Severity.Error);
        }
        finally
        {
            switch (archivo)
            {
                case 1:
                    ejecutando1 = false;
                    break;
                case 2:
                    ejecutando2 = false;
                    break;
                case 3:
                    ejecutando3 = false;
                    break;
                case 4:
                    ejecutando4 = false;
                    break;
                case 5:
                    ejecutando5 = false;
                    break;
                case 6:
                    ejecutando6 = false;
                    break;
                case 7:
                    ejecutando7 = false;
                    break;
            }
        }
    }

    private async Task EjecutarTodos()
    {
        ejecutandoTodos = true;

        await EjecutarDiagnostico(1);
        await EjecutarDiagnostico(2);
        await EjecutarDiagnostico(3);
        await EjecutarDiagnostico(4);
        await EjecutarDiagnostico(5);
        await EjecutarDiagnostico(6);
        await EjecutarDiagnostico(7);

        ejecutandoTodos = false;

        Snackbar.Add("Todos los diagnósticos completados", Severity.Info);
    }
