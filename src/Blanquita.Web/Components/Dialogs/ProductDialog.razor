<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Detalles del Producto
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">
            <strong>Nombre:</strong> @ProductName
        </MudText>
        <MudText Typo="Typo.body1">
            <strong>CÃ³digo:</strong> @ProductCode
        </MudText>
        <MudText Typo="Typo.body1">
            <strong>Precio sin Impuesto:</strong> $@ProductPriceSinImpuesto
        </MudText>
        @if (LlevaImpuesto)
        {
            <MudText Typo="Typo.body1">
                <strong>Lleva Impuesto:</strong>
            </MudText>
        }
        else
        {
            <MudText Typo="Typo.body1">
                <strong>No lleva Impuesto:</strong>
            </MudText>
        }
        <MudText Typo="Typo.body1">
            <strong>Impuesto:</strong> @TaxRate%
        </MudText>
    </DialogContent>
</MudDialog>
@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string ProductName { get; set; } = string.Empty;

    [Parameter]
    public decimal ProductPriceSinImpuesto { get; set; }

    [Parameter]
    public string ProductCode { get; set; } = string.Empty;

    [Parameter]
    public int TaxRate { get; set; }
    [Parameter]
    public bool LlevaImpuesto { get; set; }

    private string impuesto => TaxRate > 0 ? $"{TaxRate}%" : "Exento";

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}